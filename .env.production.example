# ==================================================
# CONFIGURACIÓN PARA PRODUCCIÓN
# ==================================================
# Copia este archivo en tu servidor como .env y ajusta los valores

APP_NAME=Gestior
APP_ENV=production
APP_KEY=base64:TU_KEY_AQUI_GENERA_CON_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://tudominio.com
APP_TIMEZONE=America/Argentina/Buenos_Aires

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_AR

LOG_CHANNEL=stack
LOG_STACK=single,slack
LOG_LEVEL=error

# ==================================================
# BASE DE DATOS
# ==================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=tu_base_de_datos
DB_USERNAME=tu_usuario
DB_PASSWORD='tu_password'

# ==================================================
# SESIONES - CONFIGURACIÓN IMPORTANTE PARA 419
# ==================================================
SESSION_DRIVER=database
SESSION_LIFETIME=720
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.tudominio.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ==================================================
# CACHE Y COLA
# ==================================================
CACHE_STORE=database
QUEUE_CONNECTION=database

# ==================================================
# CORREO
# ==================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.tuproveedor.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@tudominio.com
MAIL_PASSWORD=tu_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@tudominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==================================================
# LIVEWIRE - IMPORTANTE SI USAS CDN/PROXY
# ==================================================
LIVEWIRE_ASSET_URL="${APP_URL}"

# ==================================================
# CONFIGURACIÓN DE PROXY (si usas Cloudflare/Nginx)
# ==================================================
# Descomentar si usas proxy:
# TRUSTED_PROXIES=*
# TRUST_ALL_PROXIES=true

# ==================================================
# NOTAS IMPORTANTES:
# ==================================================
# 1. SESSION_DOMAIN debe tener punto inicial para subdominios: .tudominio.com
# 2. SESSION_SECURE_COOKIE=true solo si usas HTTPS
# 3. SESSION_LIFETIME en minutos (720 = 12 horas)
# 4. Después de cambiar estos valores, ejecuta:
#    php artisan config:clear
#    php artisan config:cache
#    php artisan route:cache
#    php artisan view:cache
